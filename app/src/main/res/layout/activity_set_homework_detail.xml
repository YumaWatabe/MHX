<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SetHomeworkDetailActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="詳細設定"
        android:textSize="36sp" />

    <LinearLayout
        android:id="@+id/tagLayout"
        android:layout_width="467dp"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tagsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="タグ"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/tagsSpinner"
            android:layout_width="380dp"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifLayout"
        android:layout_width="492dp"
        android:layout_height="265dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notifTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="通知"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/notifCheckLayout"
            android:layout_width="380dp"
            android:layout_height="205dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/notif7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="7日前"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="249dp" />

            <CheckBox
                android:id="@+id/notif3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="3日前"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="249dp" />

            <CheckBox
                android:id="@+id/notif2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="2日前"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="249dp" />

            <CheckBox
                android:id="@+id/notif1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="1日前"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="249dp" />

            <CheckBox
                android:id="@+id/notif0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="0日前"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="249dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/memoLayout"
        android:layout_width="470dp"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tagsTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="メモ"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/memoText"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="メモを入力"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/completeDetailButton"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="完了"
        android:textSize="30sp"/>

</LinearLayout>